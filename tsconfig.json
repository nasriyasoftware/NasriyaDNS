{
    "compilerOptions": {
        "target": "ES2022",
        "moduleResolution": "Node",
        "rootDir": "./src",
        "declaration": true,
        "declarationDir": "./dist/@types",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}